@model IEnumerable<SBurkeMIS4200.Models.Salesperson>

@{
    ViewBag.Title = "Salesperson Index";
}

<h2>Salesperson Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            Salesperson Name

        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salespersonPhone)<p><span class="glyphicon glyphicon-earphone"></span></p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salespersonAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.salespersonFullName)
        </td>
        <td>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.salespersonPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.salespersonAddress)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.salespersonId }) |
            @Html.ActionLink("Details", "Details", new { id=item.salespersonId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.salespersonId })
        </td>
    </tr>
}

</table>
